doctype html
html
  head
  	title =yield(:title)

    meta name="description" content="Take a look at how much Stockbot values a share of #{@company.company_name}."
    meta charset="UTF-8"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    meta name="keywords" content="#{@company.company_name}, #{@company.company_name} share price, #{@company.stock_ticker}"
    meta name="author" content="Matthew Tschoegl"

  	= javascript_include_tag \
    "http://yui.yahooapis.com/3.10.0/build/yui/yui-min.js" 
    = stylesheet_link_tag \
    "application" 
    = javascript_include_tag \
    'application'
    = javascript_include_tag \
    "http://squaresend.com/squaresend.js"
  	= csrf_meta_tags 

  body
    div class="sidebar"
    p class="sidebarText"
      |
      a href="mailto:contact@stockbot.io" target="_blank" class="sidebar_link" Email 
      |
        |  
      |
      a href="https://github.com/RealTschoegl/StockBot#stockbot" target="_blank" class="sidebar_link" About 
      |
        |  
      |
        Stockbot.io &copy; #{Time.now.year}
	= yield


  footer
    = render 'layouts/footer' 



    
    
