/*The font for the front page */
@import url(http://fonts.googleapis.com/css?family=Iceland);

// SASS variables 
$input_width: 55%;
$input_bottom: 10%;
$input_height: 8%;
$box-shadow-color: #1A0000;
$index_page_font: 'Iceland', cursive, sans-serif;

// SASS mixins
@mixin body-position {
  margin: auto; /* center in viewport */
  width: 80%;
  margin-top: 2%;
}

.smallSuccess {
  font-size: .8em;
}

.smallFail {
  font-size: .8em;
}

.searchForm {
  max-height: 5%;
}
// The links in the sidebar 
.sidebar_link {
  color: black;
  text-decoration: none;
}

/*The background image */
body {
  background-image: url(<%=asset_path "squairy_light.png"%>);
}

/*A wrapper for the body content in the index view*/
body.index {
  margin: auto; /* center in viewport */
  width: 70%;
  margin-top: 2%;
}

/*A class that modifies the stockbot image on the index page*/
.stockbot {
  display: none;
}

/*A wrapper for the body content in the picker view*/
body.picker {
  @include body-position;
}

body.company_picker {
  margin: auto; /* center in viewport */
  width: 80%;
  margin-top: 10%;
}

/*A wrapper for the body content in the results view*/
body.results {
  @include body-position;
}

/*The selector for forms*/
form {
  padding-bottom: 10%;
}

/*The list that the autocomplete displays*/
.yui3-aclist {
  width: 35em;
  background-color: red;
  font-family: $index_page_font;
  border: 0.063em dotted white;
  position: fixed;
}

/*The submit button on the index page*/
.bubble 
{
  position: fixed;
  width: $input_width * 0.8;
  height: 5.000em;
  background: #FF0000;
  -webkit-border-radius: 0.625em;
  -moz-border-radius: 0.625em;
  border-radius: 0.625em;
  font: {
    size: 1.8em;
    weight: bold;
    family: $index_page_font;
  }
  display: none;
  cursor: pointer;
  border: 1px solid red;
  bottom: $input_bottom + $input_height * 3;
  margin-left: (100 - ($input_width * 0.8))/4;
}

/*The arrow underneath the submit button on the index page*/
.bubble:after 
{
  position: absolute;
  content: "";
  bottom: -0.938em;
  border-style: solid;
  border-width: 0.938em 0.938em 0em;
  border-color: #FF0000 transparent;
  display: block;
  width: 0;
  z-index: 1;
  margin-left: (100 - ($input_width * 0.8))/2;
}

/*The explainer text on the index page*/
#text {
  margin-top: 40%;
  width: 100%;
  font-size: 1.8em;
  font-weight: bold;
  font-family: $index_page_font;
}

/*The placeholder text for the input field on the index page*/
::-webkit-input-placeholder { /* WebKit browsers */
    color: #191919;
}

/*The formatting for the input field on the front page*/
input[type="text"].front_page {
  position: absolute;
  bottom: $input_bottom;
  box-shadow: inset 0em 0em 0.938em $box-shadow-color;
  text-align: center;
  padding: 0.938em;
  height: $input_height;
  width: $input_width; 
  font-size: 1.6em;
  font-weight: bold;
  background-color: #FF0000;
  font-family: $index_page_font;
}

// The sidebar background that runs on the left side of the large screen pages
.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  height: 1.75em;
  width: 150%;
  background-color: red;
  box-shadow: 0px 4px 6px -2px $box-shadow-color ;
}

// The text that is found on the sidebar on the left side of the large screen pages
.sidebarText {
  position: fixed;
  left: .5em;
  top: 0;
  margin: 0 auto;
  padding: .3em;
  font: {
    size: 1.2em;
    weight: bold;
    family: $index_page_font;
  }
  z-index: 1;
}

.pure_button_small {
  width: 40%;
  font-size: 1.2em;
}

input[type="text"]#companies_search {
  width: 60%;
}

.table_container {
  overflow-x: scroll;
  max-width: 100%;
}

.apple_pagination {
  width: 100%;
  margin-left: -6%;
}

.sidebar_right {
  display: none;
}

/*For all non-mobile viewports */
@media (min-width: 767px) {
  $input_width_2: 27%;

  body.company_picker {
    margin-top: 4%;
  }

  .sidebar_right {
    top: 0;
    right: 0;
    float: right;
    position: absolute;
    display: inline;
  }

  .sidebar_right p {
    position: absolute;
    top: 0;
    right: -460%;
    margin-top: 13.5em;
    margin-left: -16.75em;
    font-size: 1.5em;
    font-weight: bold;
    font-family: "DOTMATRI", "Iceland", sans-serif;
    -webkit-transform: rotate(-90deg);
    -moz-transform: rotate(-90deg);
    -ms-transform: rotate(-90deg);
    -o-transform: rotate(-90deg);
    filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
    z-index: 1;
    text-decoration: none;
    color: black;
  }

  .block_display {
    display: block;
  }

  input[type="text"]#companies_search {
    width: 25%;
    height: 10%;
  }

  .searchForm {
    max-height: 0;
  }

  /*A container for the form on the index page*/
  .container_form {
    width: 100%;
  }

  /*The formatting for the input field on the front page*/
  input[type="text"].front_page {
    position: fixed;
    margin-left: 21%;
    width: $input_width_2;
  }

  /*A class that modifies the stockbot image on the index page*/
  .stockbot {
    display: inline;
    position: fixed;
    margin-top: -6%;
    width: 55%;
    height: 88%;
    margin-left: 9%;
  }

  /*The submit button on the index page*/
  .bubble {
  position: fixed;
  width: $input_width_2 * 0.7;
  bottom: $input_bottom + $input_height * 2.5;
  margin-left: (100 - ($input_width_2 * 0.8))/3;
  }

  /*The arrow underneath the submit button on the index page*/
  .bubble:after {
  margin-left: (100 - ($input_width_2 * 0.8))/2;
  }

  // The sidebar background that runs on the left side of the large screen pages
  .sidebar {
    position: fixed;
    height: 102%;
    top: -.25em;
    left: 0;
    width: 3.5em;
    background-color: red;
    box-shadow: 4px 0px 6px -2px $box-shadow-color ;
  }

  // The text that is found on the sidebar on the left side of the large screen pages
  .sidebarText {
    position: fixed;
    top: 0;
    left: 0;
    margin-top: 13.5em;
    margin-left: -6.75em;
    padding: .3em;
    font: {
      size: 1.5em;
      weight: bold;
      family: $index_page_font;
    }
    /* Safari */
    -webkit-transform: rotate(-90deg);
    /* Firefox */
    -moz-transform: rotate(-90deg);
    /* IE */
    -ms-transform: rotate(-90deg);
    /* Opera */
    -o-transform: rotate(-90deg); 
    /* Internet Explorer */
    filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
    z-index: 1;
  }
  /*The explainer text on the index page*/
  #text {
    margin-top: 3%;
    width: 100%;
    font-size: 1.8em;
    font-weight: bold;
    font-family: $index_page_font;
  }
}




    