@import url(http://fonts.googleapis.com/css?family=Iceland);
body {
  background-image: url(<%=asset_path "squairy_light.png"%>);
}
form {
  padding-bottom: 10%;
}
.yui3-aclist {
  width: 35em;
  background-color: red;
  font-family: 'Iceland', cursive;
  border: 1px dotted white;
}
img.stockbot {
  margin-left: 28%;
  width: 50%;
  height: 50%;
}
.bubble 
{
  position: absolute;
  width: 250px;
  height: 120px;
  padding: 0px;
  background: #FF0000;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  font-size: 1.8em;
  font-weight: bold;
  top: 345px;
  left: 600px;
  font-family: 'Iceland', cursive;
  display: none;
  cursor: pointer;
  border: 1px solid red;
}
.bubble:after 
{
  content: "";
  position: absolute;
  bottom: -15px;
  left: 110px;
  border-style: solid;
  border-width: 15px 15px 0;
  border-color: #FF0000 transparent;
  display: block;
  width: 0;
  z-index: 1;
}
#text {
  position: absolute;
  top: 50px;
  left: 50px;
  width: 300px;
  word-wrap: break-word;
  font-size: 1.8em;
  font-weight: bold;
  font-family: 'Iceland', cursive;
}
::-webkit-input-placeholder { /* WebKit browsers */
    color: #191919;
}
