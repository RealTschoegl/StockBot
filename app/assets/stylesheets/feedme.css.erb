.yui3-aclist {
  width: 35em;
  background-color: red;
  font-family: 'Iceland', cursive;
  border: 1px dotted white;
}
.bubble 
{
  position: absolute;
  width: 250px;
  height: 120px;
  padding: 0px;
  background: #FF0000;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  font-size: 1.8em;
  font-weight: bold;
  top: 470px;
  left: 700px;
  font-family: 'Iceland', cursive;
  display: none;
  cursor: hand;
}
.bubble:after 
{
  content: "";
  position: absolute;
  bottom: -15px;
  left: 110px;
  border-style: solid;
  border-width: 15px 15px 0;
  border-color: #FF0000 transparent;
  display: block;
  width: 0;
  z-index: 1;
}
#text {
  position: absolute;
  top: 50px;
  left: 50px;
  width: 300px;
  word-wrap: break-word;
  font-size: 1.8em;
  font-weight: bold;
  font-family: 'Iceland', cursive;
}
